@import url(https://fonts.googleapis.com/css?family=Roboto:300,400,500);

/* VARIABLES */
$primary-color   = #3498db
$secondary-color = #2980b9

$buy-primary-color   = #2ecc71
$buy-secondary-color = #27ae60

$default-border-radius = 3px
/*-----------*/

/* RESET */
*
  padding: 0
  margin: 0
  box-sizing: border-box

ul, li
  list-style: none

body
  font-family: 'Roboto', sans-serif
  font-size: 14px
  background: #c1c1c1
/*-----------*/

/* NAV */
.nav
  width: 100%
  padding: 0.8rem 0
  overflow: auto

  &.fixed-nav
    background: #fff
    border-bottom: #c1c1c1
    position: fixed
    top: 0
    left: 0

  .nav-wrapper
    margin-bottom: 0

    &.nav-wrapper-left
      text-align: left
      float: left

    &.nav-wrapper-right
      text-align: right
      float: right

    .nav-item
      display: inline-block
      padding: 0.5rem 1rem

      &.buy-now
        background: $buy-primary-color
        border-bottom: 1px solid $buy-secondary-color
        padding-left: 1.5rem
        padding-right: @padding-left

        &:hover
          background: $buy-secondary-color

      &.sign-up
        background: $primary-color
        border-bottom: 1px solid $secondary-color

        &:hover
          background: $secondary-color

      &.buy-now, &.sign-up
        border-radius: $default-border-radius

        .nav-text, .nav-text:hover
          color: #fff
          text-decoration: none

      .nav-text
        font-weight: 500
        color: $primary-color

        &:hover
          color: $secondary-color
