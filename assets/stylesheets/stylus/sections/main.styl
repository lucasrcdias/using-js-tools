.main
  box-shadow: inset 0 1px 10px rgba(0,0,0,.1)
  background: linear-gradient($secondary-color, #9b59b6)
  border-bottom: 1px solid shade(#9b59b6, 10%)
  text-align: center

  @media screen and (max-width: $smartphone-max)
    padding: 30px 0

  @media screen and (min-width: $tablet-min)
    padding: 100px 0 50px 0

  h1, p, a
    color: #fff

  h1, p
    text-shadow: 0 1px 1px rgba(0,0,0,0.1)

  h1
    @media screen and (min-width: $tablet-min)
      font-size: 5rem

  p
    @media screen and (max-width: $smartphone-max)
      margin: 3rem 0
      font-size: 18px

    @media screen and (min-width: $tablet-min)
      max-width: 60%
      margin: 5rem auto

  .primary-button
    box-shadow: 0 0px 10px rgba(0,0,0,0.2)

    &:hover
      box-shadow: 0 0px 30px rgba(0,0,0,0.2)
